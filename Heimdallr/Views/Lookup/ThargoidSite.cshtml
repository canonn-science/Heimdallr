@model Heimdallr.Models.ThargoidSite

@{
    ViewData["Title"] = "Thargoid Site from Canonn";
    ViewData["Heading"] = "Thargoid Site " + @Model.SiteID;
}



<div class="row">
    <div class="col-xs-5 col-md-3">
        <div class="row">
            <div class="col-xs-12 canonn-thumbnail">
                <img src="https://map.canonn.technology/us/us_sites_mapping/img/planet_grid.png" class="img-responsive" />
            </div>

        </div>

    </div>

    <div class="col-xs-7 col-md-9">
        <div class="row">
            <div class="col-md-6 text-center text-uppercase">
                <h1 class="@((Model.Active)? "ts-active" : "ts-inactive")"> @((Model.Active)? "Active" : "Inactive") </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <h4>@Model.SystemName</h4>
            </div>
            <div class="col-md-3">
                <h6>@Model.BodyName</h6>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-5 col-md-1">
                <dl>
                    <dt><h5>LAT</h5></dt>
                    <dd>@Model.Coordinates[0]</dd>
                </dl>
            </div>
            <div class="col-xs-5 col-md-1">
                <dl>
                    <dt><h5>LNG</h5></dt>
                    <dd>@Model.Coordinates[1]</dd>
                </dl>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">

                <a href="https://map.canonn.technology/us/" target="_blank">View Thargoid Site Map</a>
            </div>
        </div>
    </div>


</div>
